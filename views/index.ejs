<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>File Sharing</title>
    <style>
      body {
        font-family: "Arial", sans-serif;
        background-color: #f4f4f4;
        text-align: center;
        margin: 50px;
      }

      .container {
        max-width: 900px;
        margin: 0 auto;
        background-color: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        display: flex;
        align-items: center;
        justify-content: space-around;
      }

      .illustration {
        max-width: 500px;
        margin-right: 10px;
      }

      label {
        display: block;
        margin-bottom: 8px;
        font-weight: bold;
      }

      input[type="file"] {
        display: none;
      }

      #upload {
        display: block;
        font-weight: bold;
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        box-sizing: border-box;
        border: 1px solid #ccc;
        border-radius: 5px;
        display: flex;
        justify-content: start;
        gap: 140px;
        align-items: center;
      }

      input {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        box-sizing: border-box;
        border: 1px solid #ccc;
        border-radius: 5px;
      }

      button {
        background-color: #4caf50;
        color: #fff;
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
      }

      button:hover {
        background-color: #45a049;
      }
    </style>
  </head>

  <body>
    <div class="container">
      <form action="/upload" method="post" enctype="multipart/form-data">
        <h2>File Sharing</h2>
      
       
        <label id="upload" for="file">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="17px"
            viewBox="0 0 448 512"
          >
            <path
              d="M246.6 9.4c-12.5-12.5-32.8-12.5-45.3 0l-128 128c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L192 109.3V320c0 17.7 14.3 32 32 32s32-14.3 32-32V109.3l73.4 73.4c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3l-128-128zM64 352c0-17.7-14.3-32-32-32s-32 14.3-32 32v64c0 53 43 96 96 96H352c53 0 96-43 96-96V352c0-17.7-14.3-32-32-32s-32 14.3-32 32v64c0 17.7-14.3 32-32 32H96c-17.7 0-32-14.3-32-32V352z"
            />
          </svg>
          Choose File
        </label>
        <input
          type="file"
          id="file"
          name="file"
          required
          onchange="displayFileName(true)"
        />

        <label style="display: flex; gap: 10px;margin: 10px 0" >
          <div
            id="file-name"
            style="font-size: 0.8rem; color: #4caf50;"
          ></div>

          <svg
            id="cross"
            style="display: none;"
            xmlns="http://www.w3.org/2000/svg"
            width="10px"
            onclick="displayFileName(false)"
            viewBox="0 0 384 512"
          >
            <path
              fill="#d53434"
              d="M342.6 150.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L192 210.7 86.6 105.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L146.7 256 41.4 361.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L192 301.3 297.4 406.6c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L237.3 256 342.6 150.6z"
            />
          </svg>
        </label>

        <label for="password" >Password</label>
        <input
          type="password"
          id="password"
          name="password"
          autocomplete="off"
        />

        <button type="submit" style="font-weight: 800;" >Upload</button>
        
      </form>
          <img
        src="https://reads.kubric.io/blog/content/images/size/w2000/2020/11/uploading.png"
        alt="Image"
        class="illustration"
      />
    </div>
    <%if(fileLink != null){ %>
      <div class="container" style="margin-top: 10px;" >
        <label>File Link</label>
        <a href="<%=fileLink%>"><%=fileLink%></a>
      </div>
    <% } %>
        
    <script>
      function displayFileName(val) {
        var fileInput = document.getElementById("file");
        var fileName = fileInput.files[0].name;
        var fileNameDisplay = document.getElementById("file-name");
        var cross = document.getElementById("cross");
        if (val) {
          fileNameDisplay.innerHTML = "Selected file: " + fileName;
          cross.style.setProperty("display","block");
        }
        if (!val) {
         try {
          cross.style.setProperty("display","none");
          fileInput.value = null;
          fileNameDisplay.innerHTML = "";

         } catch (error) {
          
        }
        }
      }
    </script>
  </body>
</html>
